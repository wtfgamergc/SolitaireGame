<Window x:Class="Solitaire.MainWindow"
        Background="Green"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solitaire" Height="800" Width="1200">
    <Grid>
        <!-- Игровое поле -->
        <Canvas Name="GameCanvas" Background="Green" AllowDrop="True" 
        DragEnter="GameCanvas_DragEnter" Drop="GameCanvas_Drop" Margin="0,45,0,0">
        </Canvas>

        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
            <Button Name="NewGameButton" Content="Новая игра" Width="100" Margin="5" Click="NewGameButton_Click"/>
            <Button Name="SaveGameButton" Content="Сохранить" Width="100" Margin="5" Click="SaveGameButton_Click"/>
            <Button Name="LoadGameButton" Content="Загрузить" Width="100" Margin="5" Click="LoadGameButton_Click"/>
            <Button Name="RestartButton" Content="Рестарт" Width="100" Margin="5" Click="RestartButton_Click"/>
            <Button Name="ViewRecordsButton" Content="Рекорды" Width="100" Margin="5" Click="ViewRecordsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>