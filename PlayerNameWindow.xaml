<Window x:Class="Solitaire.PlayerNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите имя" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Введите ваше имя:" FontSize="14" Margin="0,0,0,10"/>
        <TextBox Name="PlayerNameTextBox" FontSize="14" Margin="0,0,0,10"/>
        <Button Name="OkButton" Content="ОК" Click="OkButton_Click" Width="75" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
