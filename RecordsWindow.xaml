<Window x:Class="Solitaire.Records.RecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рекорды" Height="400" Width="600">
    <Grid>
        <DataGrid Name="RecordsDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя игрока" Binding="{Binding PlayerName}"/>
                <DataGridTextColumn Header="Очки" Binding="{Binding Score}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
